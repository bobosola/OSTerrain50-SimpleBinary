// Custom 4 byte int type with associated colouring function
// to display all null address values with a white background
// and all non-null address values with a gray background
typedef int32 AddressInt <bgcolor=fnColour>;
int32 fnColour(AddressInt &var) {
    if(var == 0)
        return cWhite;
    else
        return cLtGray;
}

